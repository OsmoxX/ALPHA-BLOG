<h2 class="text-center mt-4"><%= @article.title %></h2>
<div class="container">
    <div class="row justify-content-md-center mt-4 ">
      <div class="col-8 mt-4">
        <div class="card shadow-lg mb-5 bg-white rounded">
          <div class="card-header fst-italic text-center">
            by <%= @article.user.username if @article.user %>
            <%= link_to gravatar_for(@article.user), users_path(@article.user) %>
          </div>
          <div class="card-body">
            <div class="card-text text-left"><%= simple_format(@article.description) %></div>
            <div class="text-center mt-4">
            <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info text-center"  %>
            <%= link_to "Delete", article_path(@article), class: "btn btn-outline-danger text-center", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
          <div class="card-footer text-body-secondary text-center">
            <small> Created <%= time_ago_in_words(@article.created_at) %> ago,
              Edited <%= time_ago_in_words(@article.updated_at) %> ago </small>
          </div>
        </div>
      </div>
    </div>
</div>
