<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%=render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class:"shadow-lg p-3 mb-3 bg-info rounded", local: true) do |f| %>

        <div class="form-group row mb-3">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :category, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name,
                                    { prompt: "Make your selection from list below (can be empty)"}, {multiple: true, size: 3 ,class: "custom-select form-control shadow rounded" })  %>
          </div>
        </div>

        <div class="form-group row justify-content-center text-center">
          <div class="col-10">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>

  <div class="row justify-content-center mt-3 mb-3">
    <div class="col-10 text-center">
      <%= link_to articles_path, class: "btn btn-outline-dark mt-3" do %>
        <i class=""></i> Cancel and return to articles listing
      <% end %>
    </div>
  </div>
</div>